# Arquivo .replit

entrypoint = "app.py"

[deployment]
run = "uvicorn app:app --host=0.0.0.0 --port=8000 --reload"
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[nix]
channel = "stable-24_05"
packages = [
  "cairo",
  "ffmpeg-full",
  "freetype",
  "ghostscript",
  "gobject-introspection",
  "gtk3",
  "libxcrypt",
  "pkg-config",
  "qhull",
  "tcl",
  "tk"
]

modules = ["python-3.11"]